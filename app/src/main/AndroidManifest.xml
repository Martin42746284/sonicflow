<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- ✅ Permissions réseau et services -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE_MEDIA_PLAYBACK" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <!-- ✅ Permissions pour lire les fichiers audio (Android 12 et moins) -->
    <uses-permission
        android:name="android.permission.READ_EXTERNAL_STORAGE"
        android:maxSdkVersion="32" />

    <!-- ✅ Permissions pour lire les fichiers audio (Android 13+) -->
    <uses-permission android:name="android.permission.READ_MEDIA_AUDIO" />

    <!-- ✅ Permission pour afficher les notifications (Android 13+) -->
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />

    <application
        android:name=".SonicFlowApplication"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.SonicFlow"
        tools:targetApi="31">

        <!-- ✅ MainActivity - Point d'entrée de l'application -->
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:launchMode="singleTop"
            android:theme="@style/Theme.SonicFlow"
            android:configChanges="orientation|screenSize|keyboardHidden">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- ✅ AudioPlaybackService - Service de lecture audio en arrière-plan -->
        <service
            android:name=".service.AudioPlaybackService"
            android:enabled="true"
            android:exported="false"
            android:foregroundServiceType="mediaPlayback">
            <intent-filter>
                <action android:name="android.media.browse.MediaBrowserService" />
                <action android:name="androidx.media.MediaBrowserServiceCompat" />
            </intent-filter>
        </service>

        <!-- ✅ NotificationActionReceiver - Gestion des actions de notification -->
        <receiver
            android:name=".service.notification.NotificationActionReceiver"
            android:exported="false">
            <intent-filter>
                <action android:name="com.example.sonicflow.ACTION_PLAY" />
                <action android:name="com.example.sonicflow.ACTION_PAUSE" />
                <action android:name="com.example.sonicflow.ACTION_PREVIOUS" />
                <action android:name="com.example.sonicflow.ACTION_NEXT" />
                <action android:name="com.example.sonicflow.ACTION_STOP" />
            </intent-filter>
        </receiver>

        <!-- ✅ MediaButtonReceiver - Contrôles Bluetooth/casques -->
        <receiver
            android:name="androidx.media.session.MediaButtonReceiver"
            android:exported="true"
            tools:ignore="ExportedReceiver">
            <intent-filter>
                <action android:name="android.intent.action.MEDIA_BUTTON" />
            </intent-filter>
        </receiver>

    </application>

</manifest>